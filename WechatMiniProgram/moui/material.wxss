page {
  --colorA: #f0f8ff;
  --colorB: #e8f4ff;
  --colorC: #bfdeff;
  --colorD: #96c5ff;
  --colorE: #6eaaff;
  --colorF: #4285F4;
  --colorG: #2d66cf;
  --colorH: #1d49a8;
  --colorI: #103082;
  --colorJ: #0a1f5c;
  --pageColor: #fff;
}

page {
  --mtBR: 8rpx;
  --mtFS: 16px;
  --mtLH: 24px;
  --mtCRF: rgb(225, 0, 80);
  --mtCBA: rgba(0, 0, 0, .87);
  --mtCBB: rgba(0, 0, 0, .54);
  --mtCBC: rgba(0, 0, 0, .26);
  --mtCBD: rgba(0, 0, 0, .12);
  --mtCWA: rgba(255, 255, 255, 1);
  --mtCWB: rgba(255, 255, 255, .7);
  --mtCWC: rgba(255, 255, 255, .3);
  --mtCWD: rgba(255, 255, 255, .12);
  --mtSBA: 0 2px 6px 1px rgba(0, 0, 0, .24);
  --mtSBB: 0 6px 8px 1px rgba(0, 0, 0, .24);
  font-family: "Chinese Quote", -apple-system, BlinkMacSystemFont, "Segoe UI", "PingFang SC",
  "Hiragino Sans GB", "Microsoft YaHei", "Helvetica Neue", Helvetica, Arial, sans-serif,
  "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
}

/**
 * Common style
**/
.mt-num {
  font-family: monospace, Tahoma;
}

.mt-blo {
  display: block;
}

.mt-inb {
  display: inline-block;
}

page .mt-cir {
  border-radius: 50%;
}

page .mt-nob {
  border: none;
}

page .mt-nos {
  box-shadow: none;
}

/**
 * Components style
**/
.mt-btn {
  position: relative;
}

.mt-btn {
  transition: all .24s ease-in-out;
  -webkit-transition: all .24s ease-in-out;
}

.mt-btn {
  z-index: 999;
  overflow: hidden;
  font-weight: 500;
  padding: 8px 16px;
  text-align: center;
  color: var(--mtCWA);
  font-size: var(--mtFS);
  box-shadow: var(--mtSBA);
  line-height: var(--mtLH);
  background: var(--colorF);
  border-radius: var(--mtBR);
}

.mt-btn, .mt-btn::after {
  border: none;
}

.mt-btn.mt-nrm {
  color: var(--mtCBA);
  background: transparent;
  border-color: var(--mtCBA);
}

.mt-btn.mt-dan {
  background: var(--mtCRF);
  border-color: var(--mtCRF);
}

.mt-btn.mt-otl {
  border: 1px solid;
  color: var(--colorF);
  background: transparent;
  border-color: var(--colorF);
}

.mt-btn.mt-sma {
  padding: 4px 12px;
  font-size: calc(var(--mtFS) - 2px);
}

.mt-btn.mt-lar {
  padding: 9px 18px;
}

.mt-btn-hover {
  filter: brightness(.9);
  box-shadow: var(--mtSBB);
}

.mt-ripple {
  --x: 0;
  --y: 0;
  width: 0;
  height: 0;
  top: var(--y);
  left: var(--x);
  position: absolute;
}

.mt-ripple::before {
  content: ' ';
  position: absolute;
  border-radius: 100vw;
  margin: -6px 0 0 -6px;
  background: var(--mtCBC);
  animation: mtRip .48s ease-in-out both;
  -webkit-animation: mtRip .48s ease-in-out both;
}

@keyframes mtRip {
  0% {
    top: 0;
    left: 0;
    width: 12px;
    opacity: .6;
    height: 12px;
  }
  32% {
    opacity: 1;
  }
  to {
    top: -80vw;
    opacity: 0;
    left: -80vw;
    width: 160vw;
    height: 160vw;
  }
}

@-webkit-keyframes mtRip {
  0% {
    top: 0;
    left: 0;
    width: 12px;
    opacity: .6;
    height: 12px;
  }
  to {
    top: -80vw;
    opacity: 0;
    left: -80vw;
    width: 160vw;
    height: 160vw;
  }
}

.mt-cir.mt-btn {
  padding: 0;
  width: 48px;
  height: 48px;
  line-height: 48px;
  box-sizing: border-box;
}

.mt-cir.mt-btn.mt-sma {
  width: 32px;
  height: 32px;
  line-height: 32px;
  box-sizing: border-box;
}

.mt-cir.mt-btn.mt-lar {
  width: 64px;
  height: 64px;
  line-height: 64px;
  box-sizing: border-box;
}

.mt-cir.icon {
  font-size: 28px;
  font-weight: 400;
}

.mt-cir.mt-sma.icon {
  font-size: 24px;
}

.mt-cir.mt-lar.icon {
  font-size: 34px;
}
