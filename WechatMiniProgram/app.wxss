/**app.wxss**/
@import 'moui/moui.wxss';
@import 'moui/icon.wxss';


.page__hd {
    padding: 40px 15px 40px 15px;
}

.page__bd {
    padding-bottom: 40px;
}

.page__bd>button {
    margin-bottom: 12px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: center;
    font-size: 24px;
    font-weight: 520;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: center;
    font-size: 14px;
}

.page__flex {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-content: center;
  font-size: 14px;
  font-weight: 520;
  margin: 16px 32px 16px 32px;
}